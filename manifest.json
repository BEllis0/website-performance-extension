{
    "name": "Page Performance Report",
    "version": "1.0",
    "description": "Scans the page you're on and generates a page performance report in xlsx using Google Lighthouse data.",
    "permissions": [
        "activeTab",
        "<all_urls>",
        "http://*/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Website Performance Chrome Extension",
        "default_popup": "index.html"
    },
    "options_page": "options.html",
    "icons": {
    },
    "manifest_version": 2
}